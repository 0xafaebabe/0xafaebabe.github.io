<!-- contact -->
<section id="contact" name="contact" class="container grid grid-cols-1">
  <header><h1>Contact</h1></header>
  <article>
    <form method="POST" action="https://formspree.io/f/mayapobj" class="grid grid-cols-1 md:grid-cols-6 gap-4">
      <div class="md:col-span-2"></div>
      <div class="md:col-span-2 text-center">
        <div>
          <input class="subscribe-email contact-name" required type="text" name="name" placeholder="name">
        </div>
        <div>
          <input class="subscribe-email contact-email" required type="email" name="_replyto" placeholder="email">
        </div>
        <div>
          <textarea class="subscribe-email contact-message" required name="message" placeholder="message" rows="4"></textarea>
        </div>
      </div>
      <div class="md:col-span-2"></div>
      <div class="md:col-span-2"></div>
      <div class="md:col-span-2 text-center">
        <button class="subscribe-back-button" type="submit">
          Send message
        </button>
      </div>
      <div class="md:col-span-2"></div>
    </form>
  </article>
</section>
<div class="break-lg"></div>
